<div class="container">
  <h1>Welcome to Url Shortener!</h1>

  <form action="/urls" method="post">
    <input type="text" name="url[long_url]" placeholder="Enter a URL here">
    <input type="submit" value="Submit">
  </form>

  <ul>
    <% @urls.reverse.each do |url| %>
    <li><%= "#{url.long_url} : "%><a href="/<%= url.short_url %>"><%= "/" + url.short_url %></a></li>
    <% end %>
  </ul>
</div>

